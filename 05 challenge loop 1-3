#05 chalanges loop challenge 01
total = 0
while total <= 50:
    print("print a number")
    num = int(input())
    total = total+num
    print("your total is", total)

#05 while loop chalanges02
num = 0
while num < 5:
    print("enter a number")
    num = int(input())
print("the last number you entered was a",num)

#05 while loop chalanges03
print("enter a number")
num = int(input())
total = num
variable = "Y"
while variable == "Y":
    print("print a nummber")
    num2 = int(input())
    total = num + num2
    print("do you want a new number, print Y or N")
    variable = input()
print("total is",total)
