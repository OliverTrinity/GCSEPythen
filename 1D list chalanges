#1D array/list chalange
#list chalange 01
cars = []
cars.append(input("enter a 1 car brand"))
cars.append(input("enter a 2 car brand"))
cars.append(input("enter a 3 car brand"))
print(cars)

#list chalange 02
newcars = []
game = True
while game == True:
    car = input("Enter a car brand (or 'x' to exit): ")
    if car == "x":
        print("Exiting...")
        game = False
    else:
        newcars.append(car)
print("Cars entered:", newcars)

#list chalanges 03
name = []
game = True
name.append(input("enter a first name"))
name.append(input("enter a second name"))
name.append(input("enter a third name"))
while game == True:
    name_input = input("do you want to input a new name:no/yes")
    if name_input == "no":
        game = False
        print("you entered",len(name),"names")

    else:
        name.append(input("enter a new name"))
